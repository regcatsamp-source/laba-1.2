<Window x:Class="Lab_rab_kalinind.a._БПИ_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Стаж работы" Height="345" Width="400" MinHeight="380" MinWidth="300">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Small Semibold"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainWIN" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="20">
            <TextBlock 
                Text="Фамилия:"
                Margin="0,5"
                TextAlignment="Center" 
                FontFamily="Segoe UI Variable Text Light"/>
            <TextBlock 
                Text="Оклад:" 
                Margin="0,5" 
                FontFamily="Segoe UI Variable Text Light" 
                TextAlignment="Center"/>
            <TextBlock 
                Text="Год поступления:" 
                Margin="0,5" 
                FontFamily="Segoe UI Variable Text Light"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="5">
            <TextBox x:Name="TextBoxfam" 
                     Margin="0,5"
                     materialDesign:HintAssist.Hint="Введите фамилию"
                     PreviewTextInput="TextBoxfam_PreviewTextInput"/>
            <TextBox x:Name="TextBoxsum" Margin="0,5"
                     materialDesign:HintAssist.Hint="Введите сумму оклада"
                     PreviewTextInput="TextBoxsum_PreviewTextInput"/>
            <TextBox x:Name="TextBoxyear" Margin="0,5"
                     materialDesign:HintAssist.Hint="Введите год поступления"
                     PreviewTextInput="TextBoxsum_PreviewTextInput"/>
        </StackPanel>
         
        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                Content="Вычислить стаж"
                Click="s_Click"/>

        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                Content="Дни с поступления"
                Click="p_Click"/>
        
        <TextBlock 
            Grid.Row="4" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2"
                   x:Name="ResultTextBlock"
                   Text="текмст тут"
                   HorizontalAlignment="Center"
                   Margin="20"
                   Height="25"/>

        <Button Grid.Row="4" Grid.Column="0"
                Content="White"
                Margin="10"
                Click="White_Click"/>

        <Button Grid.Row="5" Grid.Column="0"
                Content="Black"
                Margin="10"
                Background="White"
                Foreground="White"
                Click="Black_Click"/>
    </Grid>
</Window>
