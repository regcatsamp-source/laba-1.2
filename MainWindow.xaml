<Window x:Class="Lab_rab_kalinind.a._БПИ_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Доходы и расходы" Height="480" Width="500" MinHeight="450" MinWidth="400">

    <!-- 🎨 Твой стиль кнопок -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Small Semibold"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Подписи -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="15">
            <TextBlock 
                Text="ФИО:" 
                Margin="0,1" />
            <TextBlock 
                Text="Категория:" 
                Margin="0,20"/>
            <TextBlock 
                Text="Пол:" 
                Margin="0,1"/>
            <TextBlock 
                Text="Доход:" 
                Margin="0,20"/>
            <TextBlock 
                Text="Расход:" 
                Margin="0,1"/>
        </StackPanel>

        <!-- Поля -->
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="5">
            <TextBox x:Name="TextBoxfam" 
                     Margin="0,5"
                     PreviewTextInput="TextBoxLettersOnly_PreviewTextInput"/>

            <ComboBox x:Name="CategoryComboBox" 
                      Margin="0,5"
                      SelectionChanged="CategoryComboBox_SelectionChanged">
                <ComboBoxItem Content="Дошкольник"/>
                <ComboBoxItem Content="Школьник"/>
                <ComboBoxItem Content="Студент"/>
                <ComboBoxItem Content="Работающий"/>
            </ComboBox>

            <TextBox x:Name="TextBoxGender" Margin="0,5"
                     PreviewTextInput="TextBoxLettersOnly_PreviewTextInput"/>

            <TextBox x:Name="TextBoxIncome" Margin="0,5"
                     PreviewTextInput="TextBoxDigitsOnly_PreviewTextInput"/>

            <TextBox x:Name="TextBoxExpense" Margin="0,5"
                     PreviewTextInput="TextBoxDigitsOnly_PreviewTextInput"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Vertical" HorizontalAlignment="Center">
            <Button 
                Content="Показать итог" 
                Click="ShowTotals_Click"/>
            <Button x:Name="ThemeButton" 
                    Content="Тёмная тема" 
                    Click="ThemeButton_Click"/>
        </StackPanel>

        <!-- Результат -->
        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ResultTextBlock"
                   Text="Результат будет здесь"
                   HorizontalAlignment="Center"
                   Margin="10"
                   TextWrapping="Wrap"
                   FontWeight="SemiBold"
                   FontSize="14"/>
    </Grid>
</Window>
