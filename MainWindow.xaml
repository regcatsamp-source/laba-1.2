<Window x:Class="Lab_rab_kalinind.a._БПИ_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Стаж работы" Height="400" Width="450" MinHeight="380" MinWidth="350">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Small Semibold"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainWIN" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Лейблы -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="20">
            <TextBlock Text="ФИО:" Margin="0,5" FontFamily="Segoe UI Variable Text Light"/>
            <TextBlock Text="Категория:" Margin="0,5" FontFamily="Segoe UI Variable Text Light"/>
            <TextBlock Text="Пол:" Margin="0,5" FontFamily="Segoe UI Variable Text Light"/>
            <TextBlock Text="Год поступления:" Margin="0,5" FontFamily="Segoe UI Variable Text Light"/>
        </StackPanel>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="5">
            <TextBox x:Name="TextBoxfam" Margin="0,5"
                     PreviewTextInput="TextBoxLettersOnly_PreviewTextInput"/>
            <TextBox x:Name="TextBoxsum" Margin="0,5"
                     PreviewTextInput="TextBoxLettersOnly_PreviewTextInput"/>
            <TextBox x:Name="TextBoxGender" Margin="0,5"
                     PreviewTextInput="TextBoxLettersOnly_PreviewTextInput"/>
            <TextBox x:Name="TextBoxyear" Margin="0,5"
                     PreviewTextInput="TextBoxDigitsOnly_PreviewTextInput"/>
        </StackPanel>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Рассчитать доход/расход" Click="s_Click"/>
            <Button Content="Вычислить стаж и дни" Click="p_Click"/>
        </StackPanel>

        <!-- Результат -->
        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ResultTextBlock"
                   Text="Результат будет здесь"
                   HorizontalAlignment="Center"
                   Margin="10"
                   TextWrapping="Wrap"
                   FontWeight="SemiBold"
                   FontSize="14"/>

        <!-- Кнопки темы -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Белая тема" Click="White_Click"/>
            <Button Content="Темная тема" Click="Black_Click"/>
        </StackPanel>
    </Grid>
</Window>
