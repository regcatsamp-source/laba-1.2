<Window x:Class="Lab_rab_kalinind.a._БПИ_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Стаж работы" Height="350" Width="400" MinHeight="300" MinWidth="300">
    <Grid x:Name="MainWIN" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="20">
            <TextBlock 
                Text="Фамилия:" 
                Margin="0,5" 
                Background="#FF6E7F8D" 
                TextAlignment="Center"
                FontFamily="Segoe UI Variable Text Light" 
                Foreground="White" />
            <TextBlock 
                Text="Оклад:" 
                Margin="0,5" 
                Background="#FF6E7F8D" 
                FontFamily="Segoe UI Variable Text Light"
                TextAlignment="Center" 
                Foreground="White" />
            <TextBlock 
                Text="Год поступления:" 
                Margin="0,5" 
                Background="#FF6E7F8D"
                FontFamily="Segoe UI Variable Text Light" 
Foreground="White" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="5">
            <TextBox 
               x:Name="TextBoxfam" 
                Margin="0,5"
                materialDesign:HintAssist.Hint="Введите фамилию"
                PreviewTextInput="TextBoxfam_PreviewTextInput"/>
            <TextBox 
                x:Name="TextBoxsum" 
                Margin="0,5" 
                materialDesign:HintAssist.Hint="Введите сумму оклада"
                PreviewTextInput="TextBoxsum_PreviewTextInput"/>
            <TextBox 
                x:Name="TextBoxyear" 
                Margin="0,5"
                materialDesign:HintAssist.Hint="Введите год поступления"
                PreviewTextInput="TextBoxsum_PreviewTextInput"/>
        </StackPanel>

        <Button 
            Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                Content="Вычислить стаж"
                Height="35" Margin="5"
                Click="s_Click"
                Background="#FF6E7F8D"
                Foreground="White"
                FontFamily="Segoe UI Variable Small Semibold"
                materialDesign:ButtonAssist.CornerRadius="15"/>

        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                Content="Дни с поступления"
                Height="35" Margin="5"
                Click="p_Click"
                Background="#FF6E7F8D"
                Foreground="White"
                FontFamily="Segoe UI Variable Small Semibold"
                materialDesign:ButtonAssist.CornerRadius="15"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                   x:Name="ResultTextBlock"
                   Text=""
                   HorizontalAlignment="Center"
                   Margin="35"/>
        
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\dima\source\repos\labakalinindabpi2302\c1cc02d2f2199982bb771e2f02c45d5d.jpg"
                        Stretch="Fill"/>
        </Grid.Background>
    </Grid>
</Window>